        <hibernate-core.version>3.3.1.GA</hibernate-core.version>
        <jpa.version>1.0</jpa.version>
        <maven-javadoc-plugin.version>2.5</maven-javadoc-plugin.version>
        <junit.version>4.4</junit.version>
    </properties>
